# Nom de l'ex√©cutable
EXEC = A3

# Fichier source
SRC = A3.c

# Fichier objet
OBJ = $(SRC:.c=.o)

# Compilateur et options
CC = gcc
CFLAGS = -Wall -Wextra

# R√®gle principale : compiler l'ex√©cutable
all: $(EXEC)

# Compilation de l'ex√©cutable
$(EXEC): $(OBJ)
	$(CC) -o $(EXEC) $(OBJ) $(CFLAGS)

# Compilation des fichiers objets
%.o: %.c
	$(CC) -c $< -o $@ $(CFLAGS)

# üí° Target pour arr√™ter la compilation apr√®s le pr√©-processing
preprocess:
	$(CC) -E $(SRC) -o A3.i

# Nettoyage des fichiers compil√©s
clean:
	rm -f $(OBJ) $(EXEC) A3.i

# Supprime tout et recompile proprement
re: clean all
